@model IEnumerable<MVC_Practica01.Models.Marcas>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre_marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estados)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estados)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.id_marcas">Edit</a> |
                    <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.id_marcas">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.id_marcas">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
