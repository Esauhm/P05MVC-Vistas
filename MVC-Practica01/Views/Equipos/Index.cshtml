@{
    List<tipo_equipo> listaTipoEquipos = new List<tipo_equipo>
    {
        new tipo_equipo {id_tipo_equipo=1, descripcion="ACCESORIOS"},
        new tipo_equipo {id_tipo_equipo=2, descripcion="LAPTOPS"},
        new tipo_equipo {id_tipo_equipo=3, descripcion="VIDEO"}
    };

    List<Marcas> listadoMarcas = new List<Marcas>
    {
        new Marcas {id_marcas=1, nombre_marca="ACER"},
        new Marcas {id_marcas=1, nombre_marca="HP"},
        new Marcas {id_marcas=1, nombre_marca="DELL"},
        new Marcas {id_marcas=1, nombre_marca="COMPAQ"}
    };

    List<estado_equipo> listadoEstados = new List<estado_equipo>
    {
        new estado_equipo {id_estados_equipo = 1, descripcion="Bueno"},
        new estado_equipo {id_estados_equipo = 2, descripcion="Dañado"}
    };
}
<h1>Mantenimiento de Equipos</h1>
<br />
<form asp-action="Create">

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            <label>Nombre</label>
        </div>
        <div class="col-sm-4">
            @Html.TextBox("nombre","",new {@class="form-control"})
        </div>
        <div class="col-sm-2">
            @Html.Label("lblDescripcion","Descripción")
        </div>
        <div class="col-sm-4">
            @Html.TextArea("descripcion","",new {@class="form-control", @placeHolder="Ingrese la descripción"})
        </div>
    </div>
    <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("lblTipoEquipo","Tipo de Equipo")
        </div>
        <div class="col-sm-4">
            @Html.DropDownList("tipo_equipo_id", new SelectList(listaTipoEquipos,"id_tipo_equipo","descripcion"), "Seleccione un tipo",new {@class="form-control"})
        </div>
    </div>

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("lblMarcas","Marca")
        </div>
        <div class="col-sm-4">
            @Html.DropDownList("marca_id", new SelectList(listadoMarcas,"id_marcas","nombre_marca"), "Seleccione una marca",new {@class="form-control"})
        </div>
        <div class="col-sm-2">
            @Html.Label("lblModelo","Modelo")
        </div>
        <div class="col-sm-4">
            @Html.TextBox("modelo","",new {@class="form-control"})
        </div>
    </div>
    <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("lblAnioCompra","Año de Compra")
        </div>
        <div class="col-sm-4">
            @Html.TextBox("anio_compra","",new {@class="form-control"})
        </div>
        <div class="col-sm-2">
            @Html.Label("lblCosto","Costo")
        </div>
        <div class="col-sm-4">
            @Html.TextBox("costo","",new {@class="form-control"})
        </div>
    </div>
    <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("lblVidaUtil","Vida Util")
        </div>
        <div class="col-sm-4">
            @Html.TextBox("vida_util","", new {@class="form-control"})
        </div>
        <div class="col-sm-2">
            @Html.Label("lblEstadoEquipo","Estado de Equipo")
        </div>
        <div class="col-sm-4">
            @Html.DropDownList("estado_equipo_id", new SelectList(listadoEstados,"id_estados_equipo","descripcion"), "Seleccione un Estado",new {@class="form-control"})
        </div>
    </div>
    <div class="form-group row mb-4">
        <div class="col-sm-2"></div>
        <div class="col-sm-4">@Html.CheckBox("estadoEquipo") Inactivo</div>
    </div>
    <div class="form-group row mb-4">
        <div class="col-sm-2"></div>
        <div class="col-sm-4">
            <input type="submit" class="btn btn-primary" value="Guardar" />
        </div>
    </div>
</form>
